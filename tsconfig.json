{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2018",
    "lib": ["DOM","ES6","ES2017","ES2018"],
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true, // allows to use "import .. from" instead of "import * as .. from"
    "esModuleInterop" : true // allows to use "import .. from" instead of "import * as .. from"
  },
  "include": ["./webpackConfig/types", "./src"]
}
